# encoding: utf-8

<ol class="breadcrumb">
<li><a href="<%= root_path%>">Principal</a></li>
<li>Permissões</li>
<li class="active">Editar</li>
</ol>
<%= painel_titulo("Editar permissão").html_safe %>
<div class="panel-body">

<div class="row">
<div class="col-md-10"> <%= exibe_erros(@permission).html_safe if @permission.errors.any?%></div>
  </div>
  <p>
    <%= form_for @permission, :html => {:class => 'form-horizontal' } do |f| %>

        <%= render :partial => 'form',:locals => { :f => f, :permission => @permission } %>
      <div class="form-group">
        <div class="col-sm-2 col-md-offset-3">
          <%= f.submit 'Editar', :class => 'btn-primary' %>
        </div>
      </div>
<% end %>


</div>
</div>

<script type="text/javascript">
$( document ).ready(function() {
  $('#edit_permission').ketchup();
});
</script>
