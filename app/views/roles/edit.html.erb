<ol class="breadcrumb">
<li><a href="<%= root_path%>">Principal</a></li>
<li><%= link_to "Grupos", roles_path%></li>
<li class="active">Editar grupo</li>
</ol>
<%= painel_titulo("Editar grupo").html_safe %>
<div class="panel-body">

